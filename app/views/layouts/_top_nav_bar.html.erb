          <path d="M19 11l5 5-5 5m1-10l-5 5"></path>
        </svg>
      </div>

    <% else %>
    <div class="dflexc-jcc col-6 company-nav-col">
      <div class=" txt-company">Company</div>
      <%= link_to signup_url do %>
        <div class="signup">Sign Up</div>
      <% end %>
    </div>

    <div class="dflexc-jcc col-6 manager-nav-col">
      <div class="txt-manager">
        Crew Manager
      </div>
      <%= link_to login_form_url do %>
        <div class="company-login">Login</div>
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="dflexc-jcc menu-action">
    <div class="open-navpanel">
      <a> <%# click action handled in javascript file home.js  %>
        <%= image_tag 'icon_open_nav_panel01.png' %>
      </a>
    </div>

  </div>


</nav>
<div class="dflexc-jcc nav-panel">
  <div class="dflexr-jce">
    <div class="close-navpanel">
      <a> <%# click action handled in javascript file home.js  %>
        <%= image_tag 'icon_close_nav_panel01.png' %>
      </a>
    </div>
  </div>

  <div class="dflexr-jcc theDate">
      <%= theDate %>
  </div>

  <div class="dflexc-jcc nav-actions">
      <%= link_to signup_url, data: {turbo_action: 'replace'}, class: 'nav-item' do %>
        <div class="company-signup">Company Sign Up</div>
      <% end %>
      <div class="manger-login nav-item">Crew Manager Login</div>
  </div>
</div>
